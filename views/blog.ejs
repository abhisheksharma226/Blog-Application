<html lang="en">
    <head>
        <%- include("./partials/head") %>
        <title>Blog</title>
    </head>
    <body>
        <%- include("./partials/nav") %>

        <div class="container mt-4">
            <h1> <%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" width="500px">
            <pre><%= blog.body %></pre>
        </div>

        <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="45px">   
        </div>

        <div class="container mt-3">
            <h2>Comments (<%= comments.length %>)</h2>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">

                    <div class="mb-3">
                      
                      <input type="text" class="form-control" name="content"  aria-describedby="emailHelp" placeholder="Enter your Comment">
                      <button type="submit" class="btn btn-sm btn-primary mt-2">Add</button>
                    </div>
                    </form>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                 <div>
                    <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="45px">  
                        <%= comment.createdBy.fullName %> <p><%= comment.content %></p>
                 </div>
                <% }) %>
            </div>
        </div>

        <%- include("./partials/script") %>
    </body>
</html>